{
  "app": {
    "name": "LED歌词播放器",
    "version": "2.0.0-refactored",
    "build": "2024.01.01",
    "author": "LED歌词播放器团队",
    "repository": "https://github.com/wenbingkun/wenbingkun.github.io",
    "license": "MIT"
  },
  "defaults": {
    "theme": "classic",
    "fontScale": 1.3,
    "playbackSpeed": 1.0,
    "playMode": "loop",
    "volume": 1.0,
    "autoPlay": false,
    "showNotifications": true,
    "enableAnimations": true
  },
  "performance": {
    "maxBatchSize": 50,
    "updateInterval": 16,
    "cacheSize": 1000,
    "enableVirtualScrolling": true,
    "virtualScrollThreshold": 100
  },
  "security": {
    "maxFileSize": {
      "audio": 524288000,
      "lyrics": 10485760,
      "image": 52428800
    },
    "allowedExtensions": {
      "audio": ["mp3", "wav", "ogg", "m4a", "aac", "flac", "mp4"],
      "lyrics": ["lrc", "txt"],
      "image": ["jpg", "jpeg", "png", "gif", "webp", "bmp"]
    },
    "dangerousExtensions": [
      "exe", "com", "bat", "cmd", "scr", "pif", "vbs", "js", "jar",
      "app", "deb", "pkg", "dmg", "run", "msi", "dll", "sys"
    ]
  },
  "ui": {
    "themes": {
      "classic": {
        "primaryColor": "#ffffff",
        "secondaryColor": "rgba(255, 255, 255, 0.7)"
      },
      "gold": {
        "primaryColor": "#ffd700",
        "secondaryColor": "rgba(255, 215, 0, 0.7)"
      },
      "blue": {
        "primaryColor": "#00bfff",
        "secondaryColor": "rgba(0, 191, 255, 0.7)"
      },
      "rainbow": {
        "primaryColor": "transparent",
        "secondaryColor": "rgba(255, 255, 255, 0.7)"
      }
    },
    "animations": {
      "lyricEnterDuration": 800,
      "themeTransitionDuration": 300,
      "notificationDuration": 3000
    }
  },
  "audio": {
    "supportedFormats": ["mp3", "wav", "ogg", "m4a", "aac", "flac", "mp4"],
    "defaultVolume": 1.0,
    "crossfadeDuration": 500,
    "preloadNextTrack": true
  },
  "lyrics": {
    "supportedFormats": ["lrc", "txt"],
    "defaultEncoding": "UTF-8",
    "supportedEncodings": ["UTF-8", "UTF-16", "GBK", "GB2312"],
    "syncTolerance": 100
  },
  "keyboard": {
    "shortcuts": {
      "playPause": "Space",
      "previousSong": "ArrowUp",
      "nextSong": "ArrowDown",
      "seekBackward": "ArrowLeft",
      "seekForward": "ArrowRight",
      "previousLyric": "Ctrl+ArrowLeft",
      "nextLyric": "Ctrl+ArrowRight",
      "firstLyric": "Ctrl+ArrowUp",
      "lastLyric": "Ctrl+ArrowDown",
      "toggleFullscreen": "Escape",
      "increaseFontSize": "Plus",
      "decreaseFontSize": "Minus",
      "switchTheme": "KeyT",
      "switchPlayMode": "KeyM",
      "focusSearch": "KeyF",
      "adjustOffsetBackward": "BracketLeft",
      "adjustOffsetForward": "BracketRight"
    }
  },
  "development": {
    "enableDebugMode": false,
    "showPerformanceInfo": false,
    "logLevel": "error",
    "enableHotReload": false
  },
  "features": {
    "dragAndDrop": true,
    "folderSelection": true,
    "batchProcessing": true,
    "backgroundImage": true,
    "fullscreen": true,
    "virtualScrolling": true,
    "caching": true,
    "errorRecovery": true,
    "performanceMonitoring": true
  }
}